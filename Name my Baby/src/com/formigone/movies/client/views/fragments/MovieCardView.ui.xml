<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.movieCard {
			font-size: 1em;
			margin: 10px;
			padding: 0;
			background: #eee;
			border: 1px solid #ddd;
			border-top: 3px solid #aaa;
			pointer: default;
			position: relative;
			-webkit-transition: all 0.25s;
		}

		.movieCard:hover {
			background: #ccc;
			border-top-color: #aaa;
			text-shadow: 0 1px 1px #fff;
		}

		.movieCardTitle {
			padding: 10px;
		}		
	</ui:style>
	<g:HTMLPanel styleName="{style.movieCard}">
		<g:Label ui:field="title" styleName="{style.movieCardTitle}"></g:Label>
	</g:HTMLPanel>
</ui:UiBinder> 